<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_graph"
    app:startDestination="@id/mainFragment">
    <fragment
        android:id="@+id/mainFragment"
        android:name="fbo.costa.bootcampeveris.ui.MainFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_main">
        <action
            android:id="@+id/action_mainFragment_to_challenge1Fragment"
            app:destination="@id/challenge1Fragment" />

        <action
            android:id="@+id/action_mainFragment_to_challenge2Fragment"
            app:destination="@id/challenge2Fragment" />

        <action
            android:id="@+id/action_mainFragment_to_aboutFragment"
            app:destination="@id/aboutFragment" />

    </fragment>

    <fragment
        android:id="@+id/challenge1Fragment"
        android:name="fbo.costa.bootcampeveris.ui.challenge1.Challenge1Fragment"
        android:label="@string/text_title_challenge1"
        tools:layout="@layout/challenge1_fragment" />

    <fragment
        android:id="@+id/challenge2Fragment"
        android:name="fbo.costa.bootcampeveris.ui.challenge2.Challenge2Fragment"
        android:label="@string/text_title_challenge2"
        tools:layout="@layout/challenge2_fragment" />

    <fragment
        android:id="@+id/aboutFragment"
        android:name="fbo.costa.bootcampeveris.ui.AboutFragment"
        android:label="@string/text_about_title" />

</navigation>
